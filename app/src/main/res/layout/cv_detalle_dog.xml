<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cvAnimes"
    android:layout_width="match_parent"
    android:layout_height="520dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_centerHorizontal="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView"
        android:layout_width="178dp"
        android:layout_height="200dp"
        android:src="@drawable/mascota6"
        app:civ_border="true"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="8dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="10"

        android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/detalle_nombre"
            android:layout_below="@id/circularImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/detalle_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textAlignment="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/detalle_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        >


        <ImageView
            android:id="@+id/detalleFoto2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/detalleFoto1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/detalleFoto2"
            android:layout_toStartOf="@+id/detalleFoto2"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <ImageView
            android:id="@+id/detalleFoto3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/detalleFoto2"
            android:layout_toEndOf="@+id/detalleFoto2"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />

        <ImageView
            android:id="@+id/detalleFoto6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_below="@+id/detalleFoto3"
            android:layout_alignLeft="@+id/detalleFoto3"
            android:layout_alignStart="@+id/detalleFoto3"
            android:layout_marginTop="19dp" />

        <ImageView
            android:id="@+id/detalleFoto4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_alignTop="@+id/detalleFoto6"
            android:layout_alignLeft="@+id/detalleFoto1"
            android:layout_alignStart="@+id/detalleFoto1" />

        <ImageView
            android:id="@+id/detalleFoto5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/maykol1"
            android:layout_alignTop="@+id/detalleFoto6"
            android:layout_alignLeft="@+id/detalleFoto2"
            android:layout_alignStart="@+id/detalleFoto2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            android:layout_below="@+id/detalleFoto1"
            android:layout_alignRight="@+id/detalleFoto1"
            android:layout_alignEnd="@+id/detalleFoto1"
            android:id="@+id/linearLayout5">

            <TextView
                android:id="@+id/tvRatingFoto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="3"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalleFoto2"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvRatingFoto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="2"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalleFoto3"
            android:layout_alignRight="@+id/detalleFoto6"
            android:layout_alignEnd="@+id/detalleFoto6"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/linearLayout2">

            <TextView
                android:id="@+id/tvRatingFoto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="6"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalleFoto4"
            android:layout_alignLeft="@+id/linearLayout5"
            android:layout_alignStart="@+id/linearLayout5">

            <TextView
                android:id="@+id/tvRatingFoto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="9"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalleFoto5"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvRatingFoto5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="5"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalleFoto6"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2">

            <TextView
                android:id="@+id/tvRatingFoto6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalleFoto1"
                android:text="7"
                android:layout_alignParentLeft="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:src="@drawable/hueso_del_perro_48"/>
        </LinearLayout>


    </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>